<h1>Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to "#{task.completed ? '[X]' : '[ ]'} #{task.title}", task_path(task) %>
      <%= link_to "Delete", task_path(task), method: :delete, data: { :confirm => "You sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add a new task', 'tasks/new' %>
